extends layouts/main 

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="upload") Video Upload
            input(type="file", value="Choose File", name="videoFile", required=true, accept="video/*") 
            input(type="text", placeholder="Title", name="title", required=true)
            input(type="text", placeholder="Description", name="description", required=true)
            input(type="submit", value="Upload Video", name="upload_video", required=true) 
