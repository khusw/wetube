extends layouts/main

block content
    .form-container
        form(action=routes.getJoin, method="post")
            input(type="text", placeholder="Enter a Full Name", name="name", required=true)
            input(type="email", placeholder="Enter a email", name="email", required=true)
            input(type="password", placeholder="Enter a password", name="password", required=true)
            input(type="password", placeholder="Verify Password", name="password2", required=true)
            input(type="submit", value="Join Now")
        include partials/socialLogin 
